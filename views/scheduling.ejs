<% include component/header %>
    <link href="/css/c.css" rel="stylesheet" type="text/css">
    <script src="/js/libs/calendar.js"></script>
	<script src = "/js/commonfunctions.js"></script>
	<script src = "/js/scheduling.js"></script>
	<title><%=title%></title> 
</head> 
<body class = "row-fluid" style = "font-family: 'Roboto', sans-serif;">
	<div class = "span4" style = "margin-top:3%;margin-left:2%;">
		<div class = "row-fluid" style = "margin-bottom:20px;">
			<div class = "span5" style = "margin-top:4%;">
				<strong class="pull-right" id = "day" style = "font-size:85px;"></strong>
			</div>
			<div class = "span7">
				<div class = "row-fluid">
					<strong style = "font-size:30px;"><font id = "month"></font> <font id = "year"></font></strong>
				</div>
				<hr style = "margin-left:0px;border-color:#B8B8B8;margin-top:5px;margin-bottom:5px;">
				<div class = "row-fluid">
					<font style = "font-size:22px;">Friday</font>
				</div>
			</div> 
		</div>
		<div class = "row-fluid">
			<div class="box calendar" data-color="blue" style="height:30em;">
		</div>
		</div>
	</div>
	<div class = "span7" style = "margin-top:2.3%;margin-left:2%;">
		<table class="table table-bordered table-striped">
			<legend id = "scheduleHead" style = "font-size:30px;font-weight:bold;"><img src="/img/default_avatar.png" style ="height:36px;width:36px;border-radius:18px;margin-bottom:5px;"/> <font>Schedule Board</font>
			<button class = "btn btn-link pull-right" id = "backButton" style = "font-size:25px;text-decoration:none;">Back &gt;</button></legend>
			<div class="accordion" id = "addScheduleArea">
			  <div class="accordion-group">
			    <div class="accordion-heading">
			      <a class="accordion-toggle" data-toggle="collapse" data-parent="#addScheduleArea" href="#scheduleInputArea" style = "text-align:center;text-decoration:none;">
			        Add New Schedule
			      </a>
			    </div>
			    <div id="scheduleInputArea" class="accordion-body collapse">
			      <div class="accordion-inner">
			      	<div class = "row-fluid">
			      		<div class = "span4">
				      		<label>Start Time<font style = "color:red;">*</font>:</label>
				      		<input type = "datetime-local" id = "scheduleStartTime" class = "scheduleInput">
			      		</div>
			      		<div class = "span4">
			      			<label>End Time<font style = "color:red;">*</font>:</label>
			      			<input type = "datetime-local" id = "scheduleEndTime" class = "scheduleInput">
			      		</div>
			      		<div class = "span4">
			      			<label>at<font style = "color:red;">*</font>:</label>
				      		<input type = "text" placeholder = "place" id = "schedulePlace" class = "scheduleInput">
			      		</div>
			      	</div>
			        <textarea id = "scheduleDescription" class = "scheduleInput" rows = "5" placeholder = "schedule description..." style = "width:94%;"></textarea>
			        <button id = "createSchedule" class = "btn btn-success pull-right" style = "margin-bottom:10px;margin-right:4%;" disabled>Create</button>
			      </div>
			    </div>
			  </div>
			</div>
			<div id = "emptyBody" class = 'well' style = 'text-align:center;'>No schedule at this day.</div>
			<tbody id = "scheduleBody" style = "display:none;">
			</tbody>
		</table>
	</div>
	</div>

	<div id="removeModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-body">
    	Are you sure your want to delete this schedule?
    </div>
    <div class="modal-footer">
      <div class = "row-fluid">
          <div class = "span8">
          <div id="floatingBarsG-remove" class = "pull-right" style ="display:none;">
                <div class="blockG rotateG_01">
                </div>
                <div class="blockG rotateG_02">
                </div>
                <div class="blockG rotateG_03">
                </div>
                <div class="blockG rotateG_04">
                </div>
                <div class="blockG rotateG_05">
                </div>
                <div class="blockG rotateG_06">
                </div>
                <div class="blockG rotateG_07">
                </div>
                <div class="blockG rotateG_08">
                </div>
            </div>
            </div>
            <div class = "span4">
            <button id = "removeConfirm" class="btn btn-danger">Confirm</button>
            <button id = "removeCancel" class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>